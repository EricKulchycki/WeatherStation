[Unit]
Description=Sensor

[Service]
ExecStart=/WeatherStation/sensor_lib/target/armv7-unknown-linux-gnueabihf/release/weather-station
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
Environment=PORT=8080
WorkingDirectory=/WeatherStation/webserver

[Install]
WantedBy=multi-user.target